<%= simple_form_for(@book, html: { class: "form-signin" }) do |f| %>

  <%= f.error_notification %>

    <%= f.input :name, required: true, label: false, placeholder: "Book Name" %>
    <%= f.input :author, required: true, label: false, placeholder: "Book Author" %>
    <%= f.input :description, required: true, label: false, placeholder: "Description", input_html: { rows: 5 } %>
    <%= f.input :price, required: true, label: false, placeholder: "Price" %>
    <%= f.input :availability, required: true, label: "Is this book available?" %>

    <%= f.button :submit, class: "btn btn-primary btn-block" %>
<% end %>
